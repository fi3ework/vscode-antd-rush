{
  "name": "vscode-antd-rush",
  "displayName": "Antd Rush",
  "description": "Rush to Ant Design in VS Code",
  "version": "1.1.1",
  "publisher": "fi3ework",
  "author": "fi3ework",
  "repository": {
    "type": "git",
    "url": "https://github.com/fi3ework/vscode-antd-rush"
  },
  "bugs": {
    "url": "https://github.com/fi3ework/vscode-antd-rush/issues"
  },
  "keywords": [
    "antd",
    "ant design",
    "react",
    "vscode",
    "vscode-extension"
  ],
  "engines": {
    "vscode": "^1.35.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "assets/logo.png",
  "galleryBanner": {
    "color": "#FFF",
    "theme": "light"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "capabilities": {
      "hoverProvider": "true"
    },
    "commands": [
      {
        "command": "antdRush.afterCompletion",
        "title": "[antd rush internal] replace string"
      }
    ],
    "languages": [
      {
        "id": "locations",
        "aliases": [
          "Locations"
        ],
        "extensions": [
          ".locations"
        ]
      }
    ],
    "configuration": {
      "title": "Antd Rush",
      "properties": {
        "antdRush.language": {
          "type": "string",
          "default": "中文",
          "enum": [
            "English",
            "中文"
          ],
          "description": "Language of Ant Design documentation."
        },
        "antdRush.handlerPrefix": {
          "type": "string",
          "default": "handle",
          "minLength": 1,
          "description": "Prefix of automatically generated handler."
        }
      }
    }
  },
  "scripts": {
    "toggle-out": "cross-env VSC_BUILDER=tsc node ./script/togglePackageJson.js",
    "toggle-dist": "cross-env VSC_BUILDER=wp node ./script/togglePackageJson.js",
    "prewebpack-build": "npm run toggle-dist",
    "webpack-build": "webpack --mode production",
    "vscode:prepublish": "npm run webpack-build",
    "compile": "tsc -p ./src",
    "compile-test": "tsc -p ./test",
    "lint": "tslint -p ./src",
    "prewatch": "npm run toggle-out",
    "watch": "tsc -watch -p ./src",
    "watch-test": "tsc -watch -p ./test",
    "build-doc": "ts-node ./src/buildResource/index.ts",
    "pretest": "npm run compile-test && npm run toggle-out",
    "test": "node ./out-test/runTest.js"
  },
  "devDependencies": {
    "@octokit/rest": "^16.35.2",
    "@types/fs-extra": "^8.0.1",
    "@types/glob": "^7.1.1",
    "@types/js-base64": "^2.3.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.7.0",
    "@types/react": "^16.9.19",
    "@types/vscode": "^1.35.0",
    "antd": "^3.26.7",
    "cross-env": "^7.0.0",
    "edit-package": "^1.0.3",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "js-base64": "^2.5.1",
    "mocha": "^7.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "unified": "^8.4.2",
    "unist-util-find": "^1.0.1",
    "vscode-test": "^1.3.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "decamelize": "^4.0.0",
    "remark-parse": "^7.0.2",
    "remark-stringify": "^7.0.4",
    "typescript": "^3.7.4",
    "vscode-languageserver": "^6.1.0"
  }
}
